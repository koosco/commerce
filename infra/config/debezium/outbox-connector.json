{
  "name": "outbox-connector",
  "config": {
    "connector.class": "io.debezium.connector.mysql.MySqlConnector",
    "tasks.max": "1",

    "database.hostname": "db",
    "database.port": "3306",
    "database.user": "admin",
    "database.password": "admin1234",
    "database.server.id": "184054",
    "database.server.name": "commerce",

    "database.include.list": "commerce_order,commerce_payment,commerce_inventory,commerce_catalog",
    "table.include.list": "commerce_order.order_outbox,commerce_payment.payment_outbox,commerce_inventory.inventory_outbox,commerce_catalog.catalog_outbox",

    "topic.prefix": "dbz",

    "schema.history.internal.kafka.bootstrap.servers": "kafka:9092",
    "schema.history.internal.kafka.topic": "schema-changes.commerce",

    "transforms": "outbox",
    "transforms.outbox.type": "io.debezium.transforms.outbox.EventRouter",
    "transforms.outbox.table.field.event.id": "id",
    "transforms.outbox.table.field.event.key": "partition_key",
    "transforms.outbox.table.field.event.type": "event_type",
    "transforms.outbox.table.field.event.payload": "payload",
    "transforms.outbox.table.field.event.timestamp": "created_at",
    "transforms.outbox.route.by.field": "topic",
    "transforms.outbox.route.topic.replacement": "${routedByValue}",

    "transforms.outbox.table.expand.json.payload": "true",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",

    "tombstones.on.delete": "false",

    "include.schema.changes": "false"
  }
}
